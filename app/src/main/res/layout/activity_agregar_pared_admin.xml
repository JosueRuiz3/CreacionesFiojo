<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".AgregarParedAdmin">

    <ScrollView
        android:id="@+id/principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FDECEC">

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="860dp">

            <!-- btn atras -->
            <RelativeLayout
                android:id="@+id/btnatras"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:clickable="true"
                android:elevation="4dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                tools:ignore="TouchTargetSizeCheck">

                <!-- img btn atras -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="iconusers_ek1"
                    android:elevation="4dp"
                    android:src="@drawable/atras" />
            </RelativeLayout>

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:cardBackgroundColor="#BCFFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:navigationIcon="@drawable/menu_1"
                    android:background="#FF7FF2" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_selecfoto"
                android:layout_width="280dp"
                android:layout_height="375dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="75dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                app:cardBackgroundColor="#A3A3A3"
                android:elevation="10dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                <ImageView
                    android:id="@+id/pared_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="390dp"
                android:layout_height="290dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="460dp"
                android:layout_marginStart="10dp"
                tools:ignore="SpeakableTextPresentCheck"
                app:cardBackgroundColor="#00FF7FF2">

                <RelativeLayout
                    android:layout_width="390dp"
                    android:layout_height="290dp"
                    android:gravity="center_horizontal|top">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:elevation="9dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/txtnombre"
                            android:layout_width="360dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:alpha="0.81000000238419"
                            android:background="@drawable/___shape"
                            android:elevation="4dp"
                            android:hint=" Nombre*"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="18dp"
                            tools:ignore="TouchTargetSizeCheck"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="110dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:elevation="9dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/txtdimensiones"
                            android:layout_width="360dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:alpha="0.81000000238419"
                            android:background="@drawable/___shape"
                            android:elevation="4dp"
                            android:hint=" Dimensiones*"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="18dp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="190dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:elevation="9dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/txtmaterial"
                            android:layout_width="180dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:alpha="0.81000000238419"
                            android:background="@drawable/___shape"
                            android:elevation="4dp"
                            android:hint=" Material*"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="18dp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="190dp"
                        android:layout_marginStart="190dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:elevation="9dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/txtprecio"
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="0dp"
                            android:alpha="0.81000000238419"
                            android:background="@drawable/___shape"
                            android:elevation="4dp"
                            android:hint=" Precio*"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:inputType="phone"
                            android:textSize="18dp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnagregar"
                android:layout_marginTop="750dp"
                android:layout_marginBottom="1dp"
                android:layout_width="273dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="70dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#FF7FF2"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:shadowColor="#7A000000"
                    android:textColor="@color/colortext"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="Agregar"
                    android:elevation="7dp" />
            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_marginTop="408dp"
                android:layout_marginStart="170dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <!-- muestra la opcion de cargando-->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints"/>
            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navegationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FF7FF2"
        app:itemTextColor="@color/black"
        app:subheaderColor="@color/black"
        app:itemIconTint="@color/black"
        app:menu="@menu/menu_agregar_admin"

        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>