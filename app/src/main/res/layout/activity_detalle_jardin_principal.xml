<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".DetalleJardinPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDECEC">

        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:cardBackgroundColor="#BCFFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:navigationIcon="@drawable/menu_1"
                    android:background="#FF7FF2" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_selecfoto"
                android:layout_width="280dp"
                android:layout_height="375dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="75dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#A3A3A3"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,DuplicateClickableBoundsCheck">

                <ImageView
                    android:id="@+id/jardin_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/btnatras"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:clickable="true"
                android:elevation="4dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    android:src="@drawable/atras" />
            </RelativeLayout>

           <RelativeLayout
               android:layout_width="416dp"
               android:layout_height="55dp"
               android:layout_marginTop="807dp"
               android:background="#94FFFFFF"
               app:cardBackgroundColor="#94FFFFFF"
               android:elevation="45dp">


                   <RelativeLayout
                       android:id="@+id/btn_whatsApp"
                       android:layout_width="80dp"
                       android:layout_height="49dp"
                       android:layout_marginTop="7dp"
                       android:layout_marginStart="50dp"
                       android:clickable="true"
                       android:foreground="?attr/selectableItemBackgroundBorderless">

                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="17dp"
                           android:layout_marginStart="0dp"
                           android:layout_marginTop="28dp"
                           android:text="WhatsApp"
                           android:textColor="@color/black"
                           android:textSize="13dp"
                           tools:ignore="TouchTargetSizeCheck" />

                       <ImageView

                           android:layout_width="37dp"
                           android:layout_height="37dp"
                           android:layout_marginStart="10dp"
                           android:layout_marginTop="-4dp"
                           android:padding="5dp"
                           app:srcCompat="@drawable/whats"
                           tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                   </RelativeLayout>


                   <RelativeLayout
                       android:id="@+id/btn_facebook"
                       android:layout_width="80dp"
                       android:layout_height="49dp"
                       android:layout_marginTop="7dp"
                       android:layout_marginStart="140dp"
                       android:clickable="true"
                       android:foreground="?attr/selectableItemBackgroundBorderless">

                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="17dp"
                           android:layout_marginStart="0dp"
                           android:layout_marginTop="28dp"
                           android:text="Facebook"
                           android:textColor="@color/black"
                           android:textSize="13dp"
                           tools:ignore="TouchTargetSizeCheck" />

                       <ImageView

                           android:layout_width="37dp"
                           android:layout_height="37dp"
                           android:layout_marginStart="10dp"
                           android:layout_marginTop="-4dp"
                           android:padding="5dp"
                           app:srcCompat="@drawable/face"
                           tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                   </RelativeLayout>


                   <RelativeLayout
                       android:id="@+id/btn_insta"
                       android:layout_width="80dp"
                       android:layout_height="49dp"
                       android:layout_marginTop="7dp"
                       android:layout_marginStart="230dp"
                       android:clickable="true"
                       android:foreground="?attr/selectableItemBackgroundBorderless">

                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="17dp"
                           android:layout_marginStart="0dp"
                           android:layout_marginTop="28dp"
                           android:text="Instagram"
                           android:textColor="@color/black"
                           android:textSize="13dp"
                           tools:ignore="TouchTargetSizeCheck" />

                       <ImageView

                           android:layout_width="37dp"
                           android:layout_height="37dp"
                           android:layout_marginStart="10dp"
                           android:layout_marginTop="-4dp"
                           android:padding="5dp"
                           app:srcCompat="@drawable/instagram"
                           tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                   </RelativeLayout>

                   <RelativeLayout
                       android:id="@+id/btn_email"
                       android:layout_width="80dp"
                       android:layout_height="49dp"
                       android:layout_marginTop="7dp"
                       android:layout_marginStart="320dp"
                       android:clickable="true"
                       android:foreground="?attr/selectableItemBackgroundBorderless">

                       <TextView
                           android:layout_width="80dp"
                           android:layout_height="17dp"
                           android:layout_marginStart="0dp"
                           android:layout_marginTop="28dp"
                           android:text="    Email"
                           android:textColor="@color/black"
                           android:textSize="13dp"
                           tools:ignore="TouchTargetSizeCheck" />

                       <ImageView

                           android:layout_width="37dp"
                           android:layout_height="37dp"
                           android:layout_marginStart="10dp"
                           android:layout_marginTop="-4dp"
                           android:padding="5dp"
                           app:srcCompat="@drawable/email"
                           tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                   </RelativeLayout>


           </RelativeLayout>


            <RelativeLayout
                android:layout_width="390dp"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="420dp"
                android:layout_marginStart="10dp"
                tools:ignore="SpeakableTextPresentCheck"
                app:cardBackgroundColor="#00FF7FF2">

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/txtnombre"
                        android:layout_width="360dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="1dp"
                        android:elevation="4dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:text="Nombre"
                        tools:ignore="TouchTargetSizeCheck"
                        android:gravity="center|start"
                        android:focusable="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="184dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="155dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="1dp"
                        android:elevation="4dp"
                        android:textColor="@color/colortext"
                        android:textSize="25dp"
                        android:text="Dimensiones:"
                        tools:ignore="TouchTargetSizeCheck"
                        android:gravity="center|start"
                        android:focusable="false"/>

                    <TextView
                        android:id="@+id/txtdimensiones"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="10dp"
                        android:elevation="4dp"
                        android:textColor="@color/colortext"
                        android:textSize="25dp"
                        android:text="Dimensiones"
                        tools:ignore="TouchTargetSizeCheck"
                        android:focusable="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="132dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="1dp"
                        android:elevation="4dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:text="Materiales: "
                        tools:ignore="TouchTargetSizeCheck"
                        android:gravity="center|start"
                        android:focusable="false"/>
                    <TextView
                        android:id="@+id/txtmaterial"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="136dp"
                        android:elevation="4dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:text="Material"
                        tools:ignore="TouchTargetSizeCheck"
                        android:gravity="center|start"
                        android:focusable="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="0dp"
                        android:elevation="4dp"
                        android:focusable="false"
                        android:gravity="center|start"
                        android:text="Precio: "
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        tools:ignore="TouchTargetSizeCheck" />
                    <TextView
                        android:id="@+id/txtprecio"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="98dp"
                        android:elevation="4dp"
                        android:focusable="false"
                        android:gravity="center|start"
                        android:text="Precio"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        tools:ignore="TouchTargetSizeCheck" />
                    <TextView
                        android:id="@+id/signoColon"
                        android:layout_width="26dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="2dp"
                        android:elevation="4dp"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:text="	₡"
                        tools:ignore="TouchTargetSizeCheck"
                        android:gravity="center|start"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="240dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:elevation="4dp"
                        android:textColor="@color/colortext"
                        android:textSize="20dp"
                        android:text="Todos los diseños son personalizados, las dimensiones y precio van a variar dependiendo de que como las quiere personalizar."
                        tools:ignore="TouchTargetSizeCheck"
                        android:gravity="center|start"
                        android:focusable="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="340dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">


                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="408dp"
                android:layout_marginStart="170dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navegationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FF7FF2"
        app:itemTextColor="@color/black"
        app:subheaderColor="@color/black"
        app:itemIconTint="@color/black"
        app:menu="@menu/navegation_menu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>