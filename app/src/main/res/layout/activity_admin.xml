<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <ScrollView android:id="@+id/principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pantallaprincipal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:cardBackgroundColor="#BCFFFFFF"
                app:cardCornerRadius="5dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:navigationIcon="@drawable/menu_1"
                    android:background="#FF7FF2" />
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:textSize="30dp"
                android:textColor="@color/colortext"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="0dp"
                android:text="Administrador" />

            <TextView
                android:textSize="30dp"
                android:textColor="@color/colortext"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:text="Categorias" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="136dp"
                android:background="#00000000">

                <RelativeLayout
                    android:id="@+id/jardin"
                    android:gravity="center_horizontal|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <androidx.cardview.widget.CardView
                        android:layout_width="335dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="1dp"
                        app:cardCornerRadius="10dp"
                        android:gravity="center_horizontal|top"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#72FF7FF2"
                        tools:ignore="SpeakableTextPresentCheck">

                        <RelativeLayout
                            android:layout_width="318dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center_horizontal|top"
                            android:background="#00000000"
                            tools:ignore="SpeakableTextPresentCheck">

                            <androidx.cardview.widget.CardView
                                android:layout_width="320dp"
                                android:layout_height="186dp"
                                android:elevation="50dp"
                                android:gravity="center_horizontal|top"
                                app:cardBackgroundColor="#00C978C9"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="420dp"
                                    android:layout_height="220dp"
                                    android:layout_marginTop="-15dp"
                                    android:layout_marginStart="-55dp"
                                    android:gravity="center_horizontal|top"
                                    android:src="@drawable/hfds" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_marginTop="193dp"
                        android:layout_width="123dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginStart="115dp"
                        android:text="Jardin" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pared"
                    android:gravity="center_horizontal|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="240dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <androidx.cardview.widget.CardView
                        android:layout_width="335dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="1dp"
                        app:cardCornerRadius="10dp"
                        android:gravity="center_horizontal|top"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#72FF7FF2"
                        tools:ignore="SpeakableTextPresentCheck">

                        <RelativeLayout
                            android:layout_width="318dp"
                            android:layout_height="180dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center_horizontal|top"
                            android:background="#00000000"
                            tools:ignore="SpeakableTextPresentCheck">

                            <androidx.cardview.widget.CardView
                                android:layout_width="320dp"
                                android:layout_height="186dp"
                                android:elevation="50dp"
                                android:gravity="center_horizontal|top"
                                app:cardBackgroundColor="#00C978C9"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="410dp"
                                    android:layout_height="210dp"
                                    android:layout_marginTop="-15dp"
                                    android:layout_marginStart="-45dp"
                                    android:gravity="center_horizontal|top"
                                    android:src="@drawable/pa" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_marginTop="193dp"
                        android:layout_width="123dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginStart="115dp"
                        android:text="Pared" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/religioso"
                    android:gravity="center_horizontal|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="480dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <androidx.cardview.widget.CardView
                        android:layout_width="335dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="1dp"
                        app:cardCornerRadius="10dp"
                        android:gravity="center_horizontal|top"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#72FF7FF2"
                        tools:ignore="SpeakableTextPresentCheck">

                        <RelativeLayout
                            android:layout_width="318dp"
                            android:layout_height="182dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center_horizontal|top"
                            android:background="#00000000"
                            tools:ignore="SpeakableTextPresentCheck">

                            <androidx.cardview.widget.CardView
                                android:layout_width="320dp"
                                android:layout_height="186dp"
                                android:elevation="50dp"
                                android:gravity="center_horizontal|top"
                                app:cardBackgroundColor="#00C978C9"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="320dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="-45dp"
                                    android:gravity="center_horizontal|top"
                                    android:src="@drawable/asf" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_marginTop="193dp"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginStart="115dp"
                        android:text="Religioso" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/macetas"
                    android:layout_marginTop="720dp"
                    android:gravity="center_horizontal|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <androidx.cardview.widget.CardView
                        android:layout_width="335dp"
                        android:layout_height="192dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="1dp"
                        app:cardCornerRadius="10dp"
                        android:gravity="center_horizontal|top"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#72FF7FF2"
                        tools:ignore="SpeakableTextPresentCheck">

                        <RelativeLayout
                            android:layout_width="318dp"
                            android:layout_height="182dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center_horizontal|top"
                            android:background="#00000000"
                            tools:ignore="SpeakableTextPresentCheck">

                            <androidx.cardview.widget.CardView
                                android:layout_width="320dp"
                                android:layout_height="186dp"
                                android:elevation="50dp"
                                android:gravity="center_horizontal|top"
                                app:cardBackgroundColor="#00C978C9"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="320dp"
                                    android:layout_height="200dp"
                                    android:layout_marginTop="-5dp"
                                    android:gravity="center_horizontal|top"
                                    android:src="@drawable/macetas" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_marginTop="193dp"
                        android:layout_width="123dp"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginStart="115dp"
                        android:text="Macetas" />
                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/charm"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/colortext"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="950dp"
                    android:layout_width="443dp"
                    android:layout_height="68dp"
                    android:text="¡Pintamos con amor y a tu gusto!" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navegationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FF7FF2"
        app:itemTextColor="@color/black"
        app:subheaderColor="@color/black"
        app:itemIconTint="@color/black"
        app:menu="@menu/navegation_menu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>