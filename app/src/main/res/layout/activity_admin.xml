<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <ScrollView android:id="@+id/principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pantallaprincipal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:cardBackgroundColor="#BCFFFFFF"
                app:cardCornerRadius="5dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:navigationIcon="@drawable/menu_1"
                    android:background="#FF7FF2" />
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:textSize="30dp"
                android:textColor="@color/colortext"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="0dp"
                android:text="Administrador" />

            <TextView
                android:textSize="30dp"
                android:textColor="@color/colortext"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:text="Categorias" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="136dp"
                android:background="#00000000">

                <androidx.cardview.widget.CardView
                    android:id="@+id/jardin"
                    android:layout_width="170dp"
                    android:layout_height="228dp"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_horizontal|top"
                    app:cardBackgroundColor="#C978C9"
                    app:cardCornerRadius="23dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <androidx.cardview.widget.CardView
                        android:layout_width="155dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_width="205dp"
                            android:layout_height="215dp"
                            android:layout_marginStart="-24dp"
                            android:layout_marginTop="-2dp"
                            android:gravity="center_horizontal|top"
                            android:src="@drawable/jardin" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="197dp"
                        android:text="Jardin" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pared"
                    android:layout_width="170dp"
                    android:layout_height="228dp"
                    android:layout_marginStart="217dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_horizontal|top"
                    app:cardBackgroundColor="#C978C9"
                    app:cardCornerRadius="23dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <androidx.cardview.widget.CardView
                        android:layout_width="155dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_width="205dp"
                            android:layout_height="215dp"
                            android:layout_marginStart="-24dp"
                            android:layout_marginTop="-2dp"
                            android:gravity="center_horizontal|top"
                            android:src="@drawable/jardin" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="197dp"
                        android:text="Pared" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/religioso"
                    android:layout_width="170dp"
                    android:layout_height="228dp"
                    android:layout_marginStart="217dp"
                    android:layout_marginTop="270dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_horizontal|top"
                    app:cardBackgroundColor="#C978C9"
                    app:cardCornerRadius="23dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <androidx.cardview.widget.CardView
                        android:layout_width="155dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_width="205dp"
                            android:layout_height="215dp"
                            android:layout_marginStart="-24dp"
                            android:layout_marginTop="-2dp"
                            android:gravity="center_horizontal|top"
                            android:src="@drawable/jardin" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="197dp"
                        android:text="Religioso" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/macetas"
                    android:layout_width="170dp"
                    android:layout_height="228dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="270dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center_horizontal|top"
                    app:cardBackgroundColor="#C978C9"
                    app:cardCornerRadius="23dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <androidx.cardview.widget.CardView
                        android:layout_width="155dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:layout_width="205dp"
                            android:layout_height="215dp"
                            android:layout_marginStart="-24dp"
                            android:layout_marginTop="-2dp"
                            android:gravity="center_horizontal|top"
                            android:src="@drawable/jardin" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal|top"
                        android:textSize="25dp"
                        android:textColor="@color/colortext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:elevation="10dp"
                        android:layout_marginTop="197dp"
                        android:text="Macetas" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:fontFamily="@font/charm"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/colortext"
                    android:layout_marginTop="550dp"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="Â¡Pintamos con amor y a tu gusto!" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navegationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FF7FF2"
        app:itemTextColor="@color/black"
        app:subheaderColor="@color/black"
        app:itemIconTint="@color/black"
        app:menu="@menu/navegation_menu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>